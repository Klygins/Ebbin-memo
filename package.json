{
  "name": "EbbinMemo",
  "version": "0.1.1",
  "repository": "https://github.com/farawayCC/Ebbin-memo.git",
  "author": "farawayCC <iosdevfarconsoft@gmail.com>",
  "license": "MIT",
  "description": "Ebbinghaus Memo app for storing plain text for repetitions at regular intervals to achieve increadible levels of assimilation of new knowledge",
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "react-scripts": "^4.0.3",
    "wait-on": "^5.3.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "icon": "./src/icon.png",
  "build": {
    "appId": "com.example.EbbinMemo",
    "productName": "EbbinMemo",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "icon": "./src/icon.png",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "./src/icon.png"
    },
    "files": [
      "./src/*"
    ],
    "directories": {
      "buildResources": "src"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
